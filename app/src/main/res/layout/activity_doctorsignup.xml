<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginsignupdoctor.SignUpDoctorActivity"
   >

    <!-- Top Image -->
    <ImageView
        android:id="@+id/signupdoctorimg1"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/circle" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/signupdoctorview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:text="Welcome"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Please Login Text -->
    <TextView
        android:id="@+id/signupdoctorview7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="110dp"
        android:text="Please Login"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Form Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/signupdoctorimg1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Email Label -->
        <TextView
            android:id="@+id/signupdoctorview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/signupdoctoredittext1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/baseline_email_24"
            android:hint="  Enter Your Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textStyle="italic"
            android:textColor="@color/brown"
            android:textSize="18sp" />

        <!-- Password Label -->
        <TextView
            android:id="@+id/signupdoctortextview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Set Password"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Password Input with Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/signupdoctoredittext2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:drawableStart="@drawable/baseline_password_24"
                android:hint=" Enter Your Password"
                android:textStyle="italic"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/brown"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/togglePasswordVisibility"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/baseline_visibility_off_24"
                android:contentDescription="Toggle Password Visibility" />
        </LinearLayout>
        <TextView
            android:id="@+id/signupdoctortextview4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Confirm Password"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/signupdoctoredittext3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textStyle="italic"
                android:background="@android:color/white"
                android:drawableStart="@drawable/baseline_password_24"
                android:hint=" Enter Your Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/brown"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/togglePasswordVisibility2"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/baseline_visibility_off_24"
                android:contentDescription="Toggle Password Visibility" />
        </LinearLayout>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:text="Forgot Password?"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="italic" />

        <!-- Login Button -->
        <Button
            android:id="@+id/signupdoctorBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:background="@color/yellow"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
